        </LinearLayout>

        <com.rey.material.widget.EditText
            style="@style/Material.Widget.EditText.Light"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/textColorPrimary"
            app:et_inputId="@+id/textfield_et_email_label_input"
            android:inputType="textEmailAddress"
            android:layout_gravity="center_horizontal"
            android:hint="@string/email"
            app:et_supportMode="helper"
            app:et_supportTextErrorColor="@color/colorPrimary"
            app:et_dividerErrorColor="@color/colorPrimary"
            android:textAppearance="@style/TextAppearanceMine"
